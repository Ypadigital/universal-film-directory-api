{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["src/*"],
      "@config/*": ["config/*"],
      "modules/*": ["modules/*"],
      "utils/*": ["utils/*"],
      "@lib/*": ["lib/*"]
    },
    "forceConsistentCasingInFileNames": true,
    "noEmit": true
  },
  "include": ["src/**/*.ts", "src/index.ts"],
  "exclude": ["node_modules", "dist"]
}
